{% if section.settings.show_announcement %}
  <div class="announcement-bar" style="background-color: {{ section.settings.background }}; color: {{ section.settings.text_color }};">
    <div class="announcement-bar__content">
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" class="announcement-bar__link">
          {{ section.settings.text }}
        </a>
      {% else %}
        <p class="announcement-bar__message">{{ section.settings.text }}</p>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": false
    },
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link",
      "info": "Optional"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#2B5741"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.announcement-bar {
  padding: 10px 0;
  text-align: center;
  font-size: 0.9rem;
}

.announcement-bar__content {
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0 20px;
}

.announcement-bar__message {
  margin: 0;
}

.announcement-bar__link {
  color: inherit;
  text-decoration: none;
}

.announcement-bar__link:hover {
  text-decoration: underline;
}
{% endstylesheet %} 